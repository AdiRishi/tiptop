{
  "name": "apex-gateway",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "wrangler deploy --dry-run --outdir dist",
    "dev": "wrangler dev",
    "typecheck": "tsc --noEmit",
