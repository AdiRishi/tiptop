    "eslint": "^8.50.0",
    "eslint-config-tiptop-base": "workspace:*",
    "miniflare": "^3.20230922.0",
    "tsconfig": "workspace:*",
    "typescript": "^5.2.2",
    "vitest": "0.34.6",
    "vitest-environment-miniflare": "^2.14.1",
    "wrangler": "^3.10.1"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.1.9",
    "hono": "^3.7.3",
    "zod": "^3.22.2"
