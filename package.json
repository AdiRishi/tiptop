{
  "name": "tiptop",
  "private": true,
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "scripts": {
    "build": "dotenv -- turbo run build",
    "dev": "dotenv -- turbo run dev",
    "lint": "dotenv -- turbo run lint",
    "test": "dotenv -- turbo run test",
    "typecheck": "dotenv -- turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "gen": "dotenv -- turbo gen"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.16",
    "dotenv-cli": "^7.3.0",
    "eslint-config-tiptop-base": "workspace:*",
    "prettier": "^3.0.3",
    "tsconfig": "workspace:*",
    "turbo": "^1.10.16"
  }
}
